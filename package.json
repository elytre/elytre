{
  "name": "@iwazaru/walden",
  "version": "0.8.0",
  "repository": "https://github.com/iwazaru/walden",
  "author": "Cl√©ment Bourgoin <c@iwzr.fr>",
  "license": "MIT",
  "bin": {
    "walden": "./bin/walden.js"
  },
  "scripts": {
    "dev": "run-p -l dev:**",
    "dev:template": "yarn build:template --watch",
    "dev:builder": "yarn build:builder --watch",
    "format": "prettier . --write",
    "lint": "run-s -l lint:**",
    "lint:template": "eslint template/src",
    "lint:builder": "eslint builder/src",
    "test": "jest --watch",
    "build": "run-p build:**",
    "build:template": "tsc --build template/",
    "build:builder": "tsc --build builder/",
    "prepublishOnly": "yarn lint && yarn test --watchAll=false && yarn build"
  },
  "dependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@types/event-hooks-webpack-plugin": "^2.0.0",
    "@types/lunr": "^2.3.3",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-require-context": "^0.1.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^4.2.2",
    "event-hooks-webpack-plugin": "^2.1.7",
    "file-loader": "^6.0.0",
    "fs-extra": "^9.0.1",
    "html-webpack-plugin": "^4.3.0",
    "live-server": "^1.2.1",
    "lunr": "^2.3.9",
    "objectmodel": "^4.2.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "slugify": "^1.4.5",
    "style-loader": "^1.2.1",
    "webpack": "^4.44.1",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@testing-library/react": "^10.4.9",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.10",
    "@types/live-server": "^1.2.0",
    "@types/react": "^16.9.48",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/webpack": "^4.41.21",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-react": "^7.20.6",
    "jest": "^26.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.1.1",
    "typescript": "^4.0.2"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80,
    "tabWidth": 2
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2020": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "object-curly-newline": "off"
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!objectmodel)"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "clearMocks": true
  }
}
