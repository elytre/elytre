{
  "name": "elytre",
  "version": "0.19.0",
  "repository": "https://github.com/elytre/elytre",
  "author": "Cl√©ment Bourgoin <c@iwzr.fr>",
  "license": "MIT",
  "bin": {
    "elytre": "./bin/elytre.js"
  },
  "engines": {
    "node": "^14.15"
  },
  "scripts": {
    "dev": "yarn build --watch",
    "format": "prettier . --write",
    "lint": "eslint src/",
    "test": "jest --watch",
    "test:all": "jest --bail",
    "build": "tsc --build .",
    "prepublishOnly": "yarn lint && yarn test --watchAll=false && yarn build"
  },
  "dependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.12.1",
    "@mdx-js/loader": "^1.6.19",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-require-context": "^0.1.1",
    "chalk": "^4.1.0",
    "chokidar": "^3.4.3",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.1.2",
    "event-hooks-webpack-plugin": "^2.1.7",
    "extra-watch-webpack-plugin": "^1.0.3",
    "file-loader": "^6.0.0",
    "fs-extra": "^9.0.1",
    "html-webpack-plugin": "^4.4.1",
    "live-server": "^1.2.1",
    "lunr": "^2.3.9",
    "objectmodel": "^4.2.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-markdown": "^5.0.0",
    "react-router-dom": "^5.2.0",
    "slugify": "^1.4.5",
    "style-loader": "^1.2.1",
    "webpack": "^4.44.1",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "@types/event-hooks-webpack-plugin": "^2.0.0",
    "@types/extra-watch-webpack-plugin": "^1.0.1",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.13",
    "@types/live-server": "^1.2.0",
    "@types/lunr": "^2.3.3",
    "@types/mdx-js__react": "^1.5.3",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.0",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/webpack": "^4.41.22",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest-dom": "^3.2.3",
    "eslint-plugin-react": "^7.20.6",
    "jest": "^26.4.2",
    "jest-transformer-mdx": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "typescript": "^4.0.2"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80,
    "tabWidth": 2
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2020": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "plugin:react/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "object-curly-newline": "off"
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!objectmodel)"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "clearMocks": true
  }
}
